{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<section class="row-title">
		<h1>Nos gites les plus r√©cents</h1>
	</section>
	<section class="row">
		{% for gite in gites %}
			<div class="card" style="width: 18rem;">
				<img src="..." class="card-img-top" alt="...">
				<div class="card-body">
					<h5 class="card-title">Card title</h5>
					<p class="card-text">{{ gite.address }}</p>
                    <p class="card-text">{{ gite.priceHightSeason }}</p>
                    <p class="card-text">{{ gite.priceLowSeason }}
					<h6 class="card-subtitle mb-2 text muted">
					Surface : {{ gite.superficy }}
					Chambres : {{ gite.bedroom }}
					</h6>
                    </p>
					<a href="{{ path('gite.show', {'id' : gite.id}) }}" class="btn btn-primary">Go somewhere</a>
				</div>
			</div>
		{% endfor %}
	</section>
{% endblock %}
