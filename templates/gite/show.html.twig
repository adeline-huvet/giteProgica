{% extends 'base.html.twig' %}
{% block title %}
	Le gîte
{% endblock %}


{% block body %}
	<div class="card bg-dark text-white col-8">
		<img src="https://via.placeholder.com/15" class="card-img" alt="...">
		<div class="card-img-overlay">
			<h5 class="card-title">
				{{ gite.name }}
			</h5>
			<p class="card-text">
				{{ gite.descript }}
			</p>

		</div>


		<p>Le gîte se trouve à l'adresse :
			{{ gite.address }}</p>
		<p>Prix TTC par nuit en haute saison :
			{{ gite.priceHightSeason }}
			€
		</p>
		<p>Prix TTC par nuit en basse saison :
			{{ gite.priceLowSeason }}
			€
		</p>
		{% if gite.animals is same as(true) %}
			<p>Animaux accepté</p>
			<p>Supplément de
				{{ gite.priceAnimals }}
				€ par animal</p>
		{% else %}
			<p>Animaux refusé</p>
		{% endif %}
		<p>Equipements</p>
		<p>
			<ul>
				{% for equipement in gite.equipements %}
					<li>{{ equipement.name }}</li>
				{% endfor %}
			</ul>
		</p>

	</div>
	<article class="row">
		<div class="row">
			<button class="btn btn-success col-2 mt-3" id="contact">Contact</button>
		</div>
		<div class="col-6" id="contactForm">
			{{ form_start(form) }}
			{{ form_rest(form) }}
			<button type="submit" class="btn btn-primary">Envoyer</button>
			{{ form_end(form) }}

			<div></article>
		{% endblock %}
